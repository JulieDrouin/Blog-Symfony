{% extends "base.html.twig" %}

{% block title %}
    Modification de l'article {{ post.title }}
{% endblock %}

{% block body %}
    <h4>
        Modifier l'article {{ post.title }}
    </h4>
    <div class="mt-3">
        <a type="button" class="btn btn-success btn-sm mb-3" href="{{ path('post_dashboard') }}">Retourner au dashboard</a>
        {{ form_start(formView) }}
        {{ form_errors(formView) }}
        <div class="row">
            <div class="col">
                {{ form_row(formView.title) }}
                {{ form_row(formView.shortDescription) }}
                {{ form_row(formView.content) }}
            </div>
            <div class="col">
                {{ form_row(formView.picture) }}
                {{ form_row(formView.category) }}
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary" role="button">
                    <i class="fas fa-save"></i>
                    Modifier
                </button>
            </div>
        </div>
        {{ form_end(formView) }}
    </div>
{% endblock %}